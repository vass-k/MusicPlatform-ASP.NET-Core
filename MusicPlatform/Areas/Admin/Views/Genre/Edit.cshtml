@model MusicPlatform.Web.ViewModels.Genre.GenreEditViewModel

@{
    ViewData["Title"] = "Edit Genre";
}

<style>
    .form-panel {
        background-color: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
        padding: 40px;
    }

    .form-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
    }

    .form-control {
        padding: 12px 15px;
        border-radius: 6px;
        border: 1px solid #ddd;
    }

        .form-control:focus {
            border-color: #ff5500;
            box-shadow: 0 0 0 4px rgba(255, 85, 0, 0.15);
        }
</style>

<h1>Edit Genre: <em>@Model.Name</em></h1>
<p class="text-muted mb-4">Update the name of the genre.</p>

<div class="row">
    <div class="col-md-6">
        <div class="form-panel">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="PublicId" />

                <div class="form-group mb-4">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>