@{
    ViewData["Title"] = "Manage Genres";
}

<style>
    .admin-dashboard-body {
        display: flex;
        background-color: #f4f7fc;
        font-family: 'Poppins', sans-serif;
    }

    .admin-sidebar {
        width: 260px;
        background-color: #1e1e1e;
        color: #fff;
        padding: 20px;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 10;
    }

    .admin-main-content {
        margin-left: 260px;
        padding: 40px;
        width: calc(100% - 260px);
        position: relative;
        background-color: hsla(217,57%,97%,1);
        background-image: radial-gradient(at 78% 33%, hsla(28,100%,74%,0.4) 0px, transparent 50%), radial-gradient(at 0% 50%, hsla(355,100%,93%,1) 0px, transparent 50%), radial-gradient(at 0% 100%, hsla(22,100%,77%,1) 0px, transparent 50%);
    }

    .content-panel {
        background-color: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 40px;
    }

    .content-panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.5);
    }

        .content-panel-header h3 {
            margin: 0;
            font-weight: 600;
            font-size: 1.3rem;
            color: #1e1e1e;
        }

    .main-button {
        padding: 10px 20px;
        font-size: 0.9rem;
    }

    .themed-table {
        width: 100%;
        border-collapse: collapse;
    }

        .themed-table th, .themed-table td {
            padding: 15px;
            text-align: left;
        }

        .themed-table thead {
            border-bottom: 2px solid rgba(0,0,0,0.1);
        }

        .themed-table th {
            color: #666;
            font-size: 0.85rem;
            text-transform: uppercase;
            font-weight: 600;
        }

        .themed-table tbody tr:not(:last-child) {
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .themed-table td {
            color: #333;
            font-weight: 500;
        }

    .table-actions a {
        color: #888;
        text-decoration: none;
        margin-right: 15px;
        transition: color 0.2s ease;
    }

        .table-actions a i {
            margin-right: 5px;
        }

        .table-actions a.edit:hover {
            color: #ff5500;
        }

        .table-actions a.delete:hover {
            color: #dc3545;
        }

    .admin-sidebar-header {
        text-align: center;
        margin-bottom: 40px;
    }

        .admin-sidebar-header h2 {
            color: #fff;
            font-family: 'Yeezy', 'Poppins', sans-serif;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

            .admin-sidebar-header h2 em {
                font-style: normal;
                color: #ff5500;
            }

    .admin-nav ul {
        list-style: none;
        padding: 0;
    }

    .admin-nav li a {
        display: flex;
        align-items: center;
        padding: 15px 10px;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .admin-nav li a:hover, .admin-nav li a.active {
            background-color: #ff5500;
            color: #fff;
        }

        .admin-nav li a i {
            margin-right: 15px;
            font-size: 1.1rem;
            width: 20px;
            text-align: center;
        }
</style>

<div class="admin-dashboard-body">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
        <div class="admin-sidebar-header">
            <h2><em>M</em>usic<em>P</em>latform</h2>
        </div>
        <nav class="admin-nav">
            <ul>
                <li><a href="#"><i class="fa fa-home"></i> Dashboard</a></li>
                <li><a href="#"><i class="fa fa-music"></i> Manage Tracks</a></li>
                <li><a href="#"><i class="fa fa-users"></i> Manage Users</a></li>
                <li><a href="#" class="active"><i class="fa fa-list"></i> Manage Genres</a></li>
                <li><a href="#"><i class="fa fa-flag"></i> Reports</a></li>
            </ul>
        </nav>
    </aside>

    <main class="admin-main-content">
        <h1>Manage Genres</h1>
        <p class="text-muted">Add, edit, or delete genres to categorize tracks on the platform.</p>

        <div class="content-panel">
            <div class="content-panel-header">
                <h3>All Genres</h3>
                <a href="#" class="main-button"><i class="fa fa-plus"></i> Add Genre</a>
            </div>

            <table class="themed-table">
                <thead>
                    <tr>
                        <th>Genre Name</th>
                        <th>Track Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Electronic</td>
                        <td>152</td>
                        <td class="table-actions">
                            <a href="#" class="edit"><i class="fa fa-pencil"></i> Edit</a>
                            <a href="#" class="delete"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Synthwave</td>
                        <td>88</td>
                        <td class="table-actions">
                            <a href="#" class="edit"><i class="fa fa-pencil"></i> Edit</a>
                            <a href="#" class="delete"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Lo-Fi</td>
                        <td>210</td>
                        <td class="table-actions">
                            <a href="#" class="edit"><i class="fa fa-pencil"></i> Edit</a>
                            <a href="#" class="delete"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Rock</td>
                        <td>95</td>
                        <td class="table-actions">
                            <a href="#" class="edit"><i class="fa fa-pencil"></i> Edit</a>
                            <a href="#" class="delete"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Ambient</td>
                        <td>45</td>
                        <td class="table-actions">
                            <a href="#" class="edit"><i class="fa fa-pencil"></i> Edit</a>
                            <a href="#" class="delete"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
</div>