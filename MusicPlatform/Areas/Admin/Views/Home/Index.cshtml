@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .admin-dashboard-body {
        display: flex;
        font-family: 'Poppins', sans-serif;
    }

    .admin-sidebar {
        width: 260px;
        background-color: #1e1e1e;
        color: #fff;
        padding: 20px;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 10;
    }

    .admin-main-content {
        margin-left: 260px;
        padding: 40px;
        width: calc(100% - 260px);
        position: relative;
        background-color: hsla(217,57%,97%,1); 
        background-image:
        radial-gradient(at 78% 33%, hsla(28,100%,74%,0.4) 0px, transparent 50%),
        radial-gradient(at 0% 50%, hsla(355,100%,93%,1) 0px, transparent 50%),
        radial-gradient(at 0% 100%, hsla(22,100%,77%,1) 0px, transparent 50%);
    }

    .stat-card, .content-panel {
        background-color: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
    }

    a.stat-card-link {
        text-decoration: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        a.stat-card-link:hover .stat-card {
            box-shadow: 0 12px 40px 0 rgba(0, 0, 0, 0.15);
        }

    .admin-sidebar-header {
        text-align: center;
        margin-bottom: 40px;
    }

        .admin-sidebar-header h2 {
            color: #fff;
            font-family: 'Yeezy', 'Poppins', sans-serif;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

            .admin-sidebar-header h2 em {
                font-style: normal;
                color: #ff5500;
            }

    .admin-nav ul {
        list-style: none;
        padding: 0;
    }

    .admin-nav li a {
        display: flex;
        align-items: center;
        padding: 15px 10px;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .admin-nav li a:hover, .admin-nav li a.active {
            background-color: #ff5500;
            color: #fff;
        }

        .admin-nav li a i {
            margin-right: 15px;
            font-size: 1.1rem;
            width: 20px;
            text-align: center;
        }

    .stat-cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .stat-card {
        padding: 25px;
        display: flex;
        align-items: center;
    }

    .stat-card-icon {
        font-size: 2.5rem;
        padding: 20px;
        border-radius: 50%;
        margin-right: 20px;
        color: #fff;
    }

        .stat-card-icon.icon-tracks {
            background-color: #ff5500;
        }

        .stat-card-icon.icon-users {
            background-color: #f1556a;
        }

        .stat-card-icon.icon-playlists {
            background-color: #28a745;
        }

    .stat-card-info h4 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        color: #333;
    }

    .stat-card-info p {
        margin: 0;
        color: #666;
    }

    .content-panel {
        padding: 30px;
        margin-bottom: 40px;
    }

    .content-panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

        .content-panel-header h3 {
            margin: 0;
            font-weight: 600;
            font-size: 1.3rem;
        }
</style>

<div class="admin-dashboard-body">
    <aside class="admin-sidebar">
        <div class="admin-sidebar-header">
            <h2><em>M</em>usic<em>P</em>latform</h2>
        </div>
        <nav class="admin-nav">
            <ul>
                <li><a href="#" class="active"><i class="fa fa-home"></i> Dashboard</a></li>
                <li><a href="#"><i class="fa fa-music"></i> Manage Tracks</a></li>
                <li><a href="#"><i class="fa fa-users"></i> Manage Users</a></li>
                <li><a href="#"><i class="fa fa-list"></i> Manage Playlists</a></li>
                <li><a href="#"><i class="fa fa-flag"></i> Reports</a></li>
            </ul>
        </nav>
    </aside>

    <main class="admin-main-content">
        <h1>Admin Dashboard</h1>
        <p class="text-muted">A general summary of your platform's activity.</p>

        <div class="stat-cards-grid">
            <a asp-area="Admin" asp-controller="Tracks" asp-action="Index" class="stat-card-link">
                <div class="stat-card">
                    <div class="stat-card-icon icon-tracks"><i class="fa fa-music"></i></div>
                    <div class="stat-card-info">
                        <h4>1,287</h4>
                        <p>Total Tracks</p>
                    </div>
                </div>
            </a>

            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="stat-card-link">
                <div class="stat-card">
                    <div class="stat-card-icon icon-users"><i class="fa fa-users"></i></div>
                    <div class="stat-card-info">
                        <h4>452</h4>
                        <p>Total Users</p>
                    </div>
                </div>
            </a>

            <a asp-area="Admin" asp-controller="Playlists" asp-action="Index" class="stat-card-link">
                <div class="stat-card">
                    <div class="stat-card-icon icon-playlists"><i class="fa fa-list"></i></div>
                    <div class="stat-card-info">
                        <h4>319</h4>
                        <p>Total Playlists</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="content-panel">
            <div class="content-panel-header">
                <h3>Quick Actions</h3>
            </div>
            <a asp-controller="Track" asp-action="Index" class="main-button">View All Tracks</a>
        </div>
    </main>
</div>