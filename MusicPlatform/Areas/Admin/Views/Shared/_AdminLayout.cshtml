<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif, sans-serif;
        }

        .admin-dashboard-body {
            display: flex;
            min-height: 100vh;
        }

        .admin-sidebar {
            width: 260px;
            background-color: #1e1e1e;
            color: #fff;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            z-index: 10;
        }

        .admin-main-content {
            margin-left: 260px;
            width: calc(100% - 260px);
            padding: 40px;
            flex-grow: 1;
            position: relative;
            background-color: hsla(217,57%,97%,1);
            background-image: radial-gradient(at 78% 33%, hsla(28,100%,74%,0.4) 0px, transparent 50%), radial-gradient(at 0% 50%, hsla(355,100%,93%,1) 0px, transparent 50%), radial-gradient(at 0% 100%, hsla(22,100%,77%,1) 0px, transparent 50%);
        }

        .admin-sidebar-header {
            text-align: center;
            margin-bottom: 40px;
        }

            .admin-sidebar-header h2 {
                color: #fff;
                font-size: 1.5rem;
                text-transform: uppercase;
                letter-spacing: 2px;
            }

                .admin-sidebar-header h2 em {
                    font-style: normal;
                    color: #ff5500;
                }

        .admin-nav ul {
            list-style: none;
            padding: 0;
        }

        .admin-nav li a {
            display: flex;
            align-items: center;
            padding: 15px 10px;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

            .admin-nav li a:hover, .admin-nav li a.active {
                background-color: #ff5500;
                color: #fff;
            }

            .admin-nav li a i {
                margin-right: 15px;
                font-size: 1.1rem;
                width: 20px;
                text-align: center;
            }

        .admin-sidebar-footer {
            position: absolute;
            bottom: 20px;
            width: calc(100% - 40px);
            text-align: center;
        }
    </style>
</head>
<body class="admin-dashboard-body">
    <aside class="admin-sidebar">
        <div class="admin-sidebar-header">
            <h2><em>M</em>usic<em>P</em>latform</h2>
        </div>
        <nav class="admin-nav">
            <ul>
                <li><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Dashboard</a></li>
                <li><a href="#"><i class="fa fa-music"></i> Manage Tracks</a></li>
                <li><a href="#"><i class="fa fa-users"></i> Manage Users</a></li>
                <li><a asp-area="Admin" asp-controller="Genre" asp-action="Index"><i class="fa fa-list"></i> Manage Genres</a></li>
                <li><a href="#"><i class="fa fa-flag"></i> Reports</a></li>
            </ul>
        </nav>
        <div class="admin-sidebar-footer">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm">← Back to Main Site</a>
        </div>
    </aside>

    <main class="admin-main-content">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>