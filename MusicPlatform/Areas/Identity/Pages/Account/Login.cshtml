@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    .login-container {
        padding: 60px 0;
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-panel {
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 900px;
        background-color: #fff;
        border-radius: 15%;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        overflow: hidden; 
    }

    .login-image-container {
        background-image: url('/images/login-and-register.png');
        background-size: cover;
        background-position: center;
    }

    .login-form-container {
        padding: 40px;
    }

    .section-heading h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e1e1e;
        margin-bottom: 30px;
    }

        .section-heading h2 em {
            font-style: normal;
            color: #ff5500;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
    }

    .form-control {
        padding: 12px 15px;
        border-radius: 6px;
        border: 1px solid #ddd;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #ff5500;
            box-shadow: 0 0 0 4px rgba(255, 85, 0, 0.15);
            outline: none;
        }

    .form-check-label {
        font-weight: 500;
        color: #555;
    }

    .main-button {
        width: 100%;
        padding: 15px 25px;
        font-size: 1rem;
        letter-spacing: 1.5px;
        margin-top: 10px;
    }

    .form-links {
        text-align: center;
        margin-top: 25px;
    }

        .form-links a {
            color: #777;
            font-size: 0.9rem;
            text-decoration: none;
            transition: color 0.2s ease;
            display: block;
            margin-bottom: 8px;
        }

            .form-links a:hover {
                color: #ff5500;
                text-decoration: underline;
            }

    @@media (max-width: 767px) {
        .login-panel {
            grid-template-columns: 1fr;
        }

        .login-image-container {
            display: none;
        }

        .login-container {
            padding: 40px 15px;
        }
    }
</style>

<div class="container login-container">
    <div class="login-panel">
        <div class="login-image-container"></div>

        <div class="login-form-container">
            <section>
                <form id="account" method="post">
                    <div class="section-heading text-center">
                        <h2>Log In to <em>Your Account</em></h2>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="main-button">Log in</button>
                    </div>

                    <div class="form-links">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}