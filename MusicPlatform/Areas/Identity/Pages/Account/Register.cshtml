@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .register-container {
        padding: 60px 0;
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .register-panel {
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 900px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        overflow: hidden;
        border-radius: 15%;
    }

    .register-image-container {
        background-image: url('/images/login-and-register.png');
        background-size: cover;
        background-position: center;
    }

    .register-form-container {
        padding: 40px;
    }

    .section-heading h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e1e1e;
        margin-bottom: 30px;
    }

        .section-heading h2 em {
            font-style: normal;
            color: #ff5500;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
    }

    .form-control {
        padding: 12px 15px;
        border-radius: 6px;
        border: 1px solid #ddd;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #ff5500;
            box-shadow: 0 0 0 4px rgba(255, 85, 0, 0.15);
            outline: none;
        }

    .main-button {
        width: 100%;
        padding: 15px 25px;
        font-size: 1rem;
        letter-spacing: 1.5px;
        margin-top: 10px;
    }

    .form-links {
        text-align: center;
        margin-top: 25px;
    }

        .form-links a {
            color: #777;
            font-size: 0.9rem;
            text-decoration: none;
            transition: color 0.2s ease;
        }

            .form-links a:hover {
                color: #ff5500;
                text-decoration: underline;
            }

    @@media (max-width: 767px) {
        .register-panel {
            grid-template-columns: 1fr;
        }

        .register-image-container {
            display: none;
        }

        .register-container {
            padding: 40px 15px;
        }
    }
</style>

<div class="container register-container">
    <div class="register-panel">
        <div class="register-image-container"></div>

        <div class="register-form-container">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" data-turbo="false">
                <div class="section-heading text-center">
                    <h2>Create a <em>New Account</em></h2>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="main-button">Register</button>

                <div class="form-links">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" data-turbo="false">Already have an account? Log in</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}