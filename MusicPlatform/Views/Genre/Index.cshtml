@model IEnumerable<MusicPlatform.Web.ViewModels.Genre.GenreIndexViewModel>

@{
    ViewData["Title"] = "Browse Genres";
    Layout = "_Layout";
}

<style>
    .genre-page-wrapper {
        padding: 80px 0;
        background-color: #f9f9f9;
    }

    .genre-hero-panel {
        padding: 50px;
        text-align: left;
        color: #fff;
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 60px;
        min-height: 400px
    }

        .genre-hero-panel::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: url('/images/genre-hero-section.png');
            background-size: cover;
            background-position: 85% center;
            z-index: 1;
            transition: transform 0.4s ease;
        }

        .genre-hero-panel:hover::before {
            transform: scale(1.05);
        }

        .genre-hero-panel::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, rgba(30,30,30,0.95) 0%, rgba(30,30,30,0.8) 40%, rgba(30,30,30,0.1) 80%, rgba(30,30,30,0) 100%);
            z-index: 2;
        }

    .hero-content {
        position: relative;
        z-index: 3;
    }

    .genre-hero-panel h1 {
        font-size: 2.8rem;
        font-weight: 700;
        text-shadow: 0 2px 8px rgba(0,0,0,0.5);
    }

        .genre-hero-panel h1 em {
            font-style: normal;
            color: #ff5500;
        }

    .genre-hero-panel p {
        font-size: 1.1rem;
        color: rgba(255,255,255,0.85);
        max-width: 500px;
        margin: 15px 0 0 0;
    }

    .genre-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 30px;
    }

    .genre-card {
        display: block;
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
        border: 2px solid transparent;
        transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    }

        .genre-card:hover {
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border-color: #ff5500;
            text-decoration: none;
        }

    .genre-card-icon {
        font-size: 3rem;
        color: #ff5500;
        margin-bottom: 20px;
    }

    .genre-card-name {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1e1e1e;
        margin-bottom: 8px;
    }

    .genre-card-count {
        font-size: 1rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
</style>

<div class="genre-page-wrapper">
    <div class="container">
        <div class="genre-hero-panel">
            <div class="hero-content">
                <h1>Find Your <em>Sound</em></h1>
                <p>Explore a universe of music, from mainstream hits to undiscovered scenes.</p>
            </div>
        </div>

        <div class="genre-grid">
            @foreach (var genre in Model)
            {
                <a asp-action="Details" asp-route-id="@genre.PublicId" class="genre-card">
                    <div class="genre-card-icon">
                        <i class="fa fa-music"></i>
                    </div>
                    <h3 class="genre-card-name">@genre.Name</h3>
                    <p class="genre-card-count">@genre.TrackCount Tracks</p>
                </a>
            }
        </div>

    </div>
</div>