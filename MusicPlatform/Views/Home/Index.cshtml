@model IEnumerable<MusicPlatform.Web.ViewModels.Track.TrackIndexViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .top-tracks-section {
        padding: 100px 0;
    }

    .track-list {
        list-style: none;
        padding: 0;
        margin: 0;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .track-list-item {
        display: flex;
        align-items: center;
        background-color: #fff;
        padding: 15px 20px;
        transition: background-color 0.2s ease-in-out;
        cursor: pointer;
    }

        .track-list-item:not(:last-child) {
            border-bottom: 1px solid #f0f0f0;
        }

        .track-list-item:hover {
            background-color: #f5f5f5;
        }

    .track-number-container {
        font-size: 1rem;
        font-weight: 600;
        color: #aaa;
        margin-right: 20px;
        width: 30px;
        text-align: center;
        position: relative;
    }

    .track-play-icon {
        display: none;
        color: #ff5500;
        font-size: 1.5rem;
    }

    .track-list-item:hover .track-number {
        display: none;
    }

    .track-list-item:hover .track-play-icon {
        display: block;
    }

    .track-info {
        flex-grow: 1;
    }

    .track-title {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
        text-decoration: none;
        display: block;
    }

        .track-title:hover {
            color: #ff5500;
        }

    .track-artist {
        font-size: 0.9rem;
        color: #888;
    }

    .track-list-meta {
        display: flex;
        gap: 20px;
        font-size: 0.9rem;
        color: #aaa;
        margin-left: auto;
        padding-right: 20px;
    }

        .track-list-meta span i {
            margin-right: 6px;
        }
</style>

<div class="welcome-area" id="welcome">
    <div class="header-text">
        <div class="container">
            <div class="row">
                <div class="left-text col-lg-6 col-md-12 col-sm-12 col-xs-12"
                     data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                    <h1>Discover and Share <em>Music</em></h1>
                    <p>Your platform for emerging artists and music lovers. Upload your tracks, connect with fans, and discover your next favorite song.</p>
                    <a a asp-area="Identity" asp-page="/Account/Register" data-turbo="false" class="main-button-slider">GET STARTED</a>
                    <a href="#top-tracks" class="secondary-button-slider scroll-to-section">EXPLORE</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="left-image-decor"></div>
<div class="right-image-decor"></div>

<section class="top-tracks-section" id="top-tracks">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="center-heading">
                    <h2>Top 10 <em>Tracks</em></h2>
                    <p>Discover what's trending on MusicPlatform right now</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="track-list">
                    @if (Model.Any())
                    {
                        @foreach (var (track, index) in Model.Select((value, i) => (value, i)))
                        {
                            <div class="track-list-item track-play-btn"
                                 id="play-track-button"
                                 data-track-id="@track.PublicId"
                                 data-src="@track.AudioUrl"
                                 data-title="@track.Title"
                                 data-artist="@track.ArtistName"
                                 data-artwork="@track.ImageUrl">

                                <div class="track-number-container">
                                    <span class="track-number">@(index + 1)</span>
                                    <i class="fa fa-play track-play-icon"></i>
                                </div>
                                <div class="track-info">
                                    <a asp-controller="Track" asp-action="Details" asp-route-id="@track.PublicId" class="track-title">
                                        @track.Title
                                    </a>
                                    <div class="track-artist">@track.ArtistName</div>
                                </div>
                                <div class="track-list-meta">
                                    <span><i class="fa fa-play"></i> @track.Plays.ToString("N0")</span>
                                    <span><i class="fa fa-heart"></i> @track.FavoritesCount.ToString("N0")</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted p-5">No tracks available to display yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>