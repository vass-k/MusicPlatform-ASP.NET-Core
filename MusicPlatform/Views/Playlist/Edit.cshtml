@model MusicPlatform.Web.ViewModels.Playlist.PlaylistEditViewModel

@{
    ViewData["Title"] = "Edit Playlist";
    Layout = "_Layout";
}

<style>
    .edit-playlist-container {
        padding: 100px 0;
        background-color: #f7f7f7;
        min-height: 80vh;
        display: flex;
        align-items: center;
    }

    .edit-playlist-form-panel {
        background-color: #fff;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.08);
    }

    .section-heading {
        margin-bottom: 30px;
    }

        .section-heading h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #1e1e1e;
        }

            .section-heading h2 em {
                font-style: normal;
                color: #ff5500;
            }

    .form-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        padding: 12px 15px;
        border-radius: 6px;
        border: 1px solid #ddd;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #ff5500;
            box-shadow: 0 0 0 4px rgba(255, 85, 0, 0.15);
            outline: none;
        }

    .form-custom-checkbox {
        padding-left: 20px
    }

    .form-check-input {
        width: 1.2em;
        height: 1.2em;
        margin-top: 0.1em;
    }

        .form-check-input:checked {
            background-color: #ff5500;
            border-color: #ff5500;
        }

        .form-check-input:focus {
            box-shadow: 0 0 0 4px rgba(255, 85, 0, 0.15);
        }

    .form-check-label {
        font-weight: 500;
        color: #555;
        padding-top: 2px;
        padding-left: 5px
    }

    .main-button {
        width: 100%;
        padding: 15px 25px;
        font-size: 1rem;
        letter-spacing: 1.5px;
    }
</style>

<div class="container edit-playlist-container">
    <div class="row justify-content-center w-100">
        <div class="col-lg-7 col-md-9">
            <div class="edit-playlist-form-panel">
                <div class="section-heading text-center">
                    <h2>Edit <em>@Model.Name</em></h2>
                </div>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="PublicId" />

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <div class="form-custom-checkbox">
                            <input type="checkbox" class="form-check-input" asp-for="IsPublic">
                            <label class="form-check-label" asp-for="IsPublic">
                                Make this playlist public
                            </label>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" value="Save Changes" class="main-button">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>