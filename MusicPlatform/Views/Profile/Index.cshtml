@using MusicPlatform.Web.ViewModels.Profile
@model ProfileViewModel

@{
    ViewData["Title"] = Model.Username + "'s Profile";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #fff;
    }

    .profile-page-container {
        padding-top: 40px;
    }

    .profile-header {
        padding: 40px;
        margin-bottom: 30px;
        background-color: #1e1e1e;
        color: #fff;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 30px;
        background-image: linear-gradient(rgba(30,30,30,0.8), rgba(30,30,30,0.8)), url('/images/musicplatform-hero.jpg');
        background-size: cover;
        background-position: center;
    }

    .profile-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 4px solid #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        flex-shrink: 0;
    }

    .profile-info h1 {
        margin: 0 0 10px 0;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .profile-actions .main-button {
        background-color: #ff5500;
    }

    .profile-actions .action-btn {
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        border-color: rgba(255,255,255,0.3);
    }

        .profile-actions .action-btn:hover {
            background-color: rgba(255,255,255,0.3);
        }

    .profile-nav {
        border-bottom: 1px solid #ddd;
        margin-bottom: 30px;
    }

        .profile-nav a {
            padding: 15px 25px;
            display: inline-block;
            margin-bottom: -1px;
            color: #666;
            font-weight: 600;
            text-decoration: none;
            border-bottom: 3px solid transparent;
        }

            .profile-nav a.active, .profile-nav a:hover {
                color: #1e1e1e;
                border-bottom-color: #ff5500;
            }

    .playlist-track-list {
        list-style: none;
        padding: 0;
    }

    .playlist-track-item {
        display: grid;
        grid-template-columns: 40px 50px 1fr auto;
        gap: 15px;
        align-items: center;
        padding: 10px;
        border-radius: 6px;
        transition: background-color 0.2s ease;
    }

        .playlist-track-item:hover {
            background-color: #f5f5f5;
        }

    .track-number, .track-list-artwork-container, .track-list-info, .track-duration {
        display: flex;
        align-items: center;
    }

    .track-number {
        color: #888;
        justify-content: center;
    }

    .playlist-track-item .play-icon {
        display: none;
        font-size: 20px;
        color: #ff5500;
        cursor: pointer;
    }

    .track-list-artwork {
        width: 45px;
        height: 45px;
        border-radius: 4px;
    }

    .track-list-info .title {
        font-weight: 600;
        color: #333;
    }

    .track-list-info .artist {
        font-size: 0.9rem;
        color: #777;
    }

    .track-list-info a {
        text-decoration: none;
        color: inherit;
    }

        .track-list-info a:hover {
            text-decoration: underline;
        }

    .track-duration {
        color: #888;
        font-size: 0.9rem;
        justify-content: flex-end;
    }

    .view-all-link {
        display: block;
        text-align: right;
        margin-top: 20px;
        font-weight: 600;
        color: #ff5500;
        text-decoration: none;
    }

        .view-all-link:hover {
            text-decoration: underline;
        }

    .track-actions {
        justify-self: flex-end; /* Aligns to the right in the grid */
    }

    .track-play-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 35px;
        height: 35px;
        border: 1px solid #ddd;
        border-radius: 50%;
        color: #555;
        text-decoration: none;
        transition: all 0.2s ease;
    }

        .track-play-btn:hover {
            background-color: #ff5500;
            color: #fff;
            border-color: #ff5500;
        }

    .no-tracks-message {
        text-align: center;
        padding: 40px;
        color: #777;
        background-color: #f9f9f9;
        border-radius: 8px;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 40px;
        margin-bottom: 80px;
    }

    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        gap: 5px;
    }

    .page-item .page-link {
        padding: 10px 15px;
        border: 1px solid #ddd;
        text-decoration: none;
        color: #333;
        border-radius: 5px;
        transition: all 0.2s ease;
    }

    .page-item.active .page-link {
        background-color: #ff5500;
        color: #fff;
        border-color: #ff5500;
    }

    .page-item.disabled .page-link {
        color: #aaa;
        pointer-events: none;
        background-color: #f7f7f7;
    }

    .page-item:not(.disabled) .page-link:hover {
        background-color: #f0f0f0;
    }
</style>

<div class="container profile-page-container">
    <div class="profile-header">
        <img src="~/images/musicplatform-hero.jpg" alt="User Avatar" class="profile-avatar" />
        <div class="profile-info">
            <h1>@Model.Username</h1>
            <div class="profile-actions">
                @if (Model.IsCurrentUserProfile)
                {
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="action-btn"><i class="fa fa-pencil"></i> Account Settings</a>
                }
            </div>
        </div>
    </div>

    <nav class="profile-nav">
        <!-- The "active" class will be managed by a future tab-switching implementation -->
        <a href="#" class="active">Tracks</a>
        <a href="#">Playlists</a>
        <a href="#">Favorites</a>
    </nav>

    <div class="tab-content">
        <div id="tracks-section">
            @if (Model.UploadedTracks.Items.Any())
            {
                <ul class="playlist-track-list">
                    @foreach (var track in Model.UploadedTracks.Items)
                    {
                        <li class="playlist-track-item">
                            <div class="track-number">
                                <span>@(Model.UploadedTracks.Items.ToList().IndexOf(track) + 1 + (Model.UploadedTracks.PageNumber - 1) * 10)</span>
                                <i class="fa fa-play-circle play-icon"></i>
                            </div>
                            <div class="track-list-artwork-container">
                                <img src="@track.ImageUrl" class="track-list-artwork" />
                            </div>
                            <div class="track-list-info">
                                <div>
                                    <div class="title"><a asp-controller="Track" asp-action="Details" asp-route-id="@track.PublicId">@track.Title</a></div>
                                    <div class="artist"><a href="#">@track.ArtistName</a></div>
                                </div>
                            </div>
                            <!-- Replaced Duration with a Play Button -->
                            <div class="track-actions">
                                <a href="#" class="track-play-btn" aria-label="Play @track.Title">
                                    <i class="fa fa-play"></i>
                                </a>
                            </div>
                        </li>
                    }
                </ul>

                <div class="pagination-container">
                    <nav>
                        <ul class="pagination">
                            <li class="page-item @(!Model.UploadedTracks.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link" asp-controller="Profile" asp-action="Index" asp-route-username="@Model.Username" asp-route-page="@(Model.UploadedTracks.PageNumber - 1)">Previous</a>
                            </li>
                            @for (var i = 1; i <= Model.UploadedTracks.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.UploadedTracks.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-controller="Profile" asp-action="Index" asp-route-username="@Model.Username" asp-route-page="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(!Model.UploadedTracks.HasNextPage ? "disabled" : "")">
                                <a class="page-link" asp-controller="Profile" asp-action="Index" asp-route-username="@Model.Username" asp-route-page="@(Model.UploadedTracks.PageNumber + 1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <div class="no-tracks-message">
                    <p>This user hasn't uploaded any tracks yet.</p>
                </div>
            }
        </div>
    </div>
</div>
