@{
    ViewData["Title"] = "Synthwave Dreamer's Profile"; // Placeholder
    Layout = "_Layout";
}

<style>
    body {
        background-color: #fff;
    }

    .profile-page-container {
        padding-top: 40px;
    }

    .profile-header {
        padding: 40px;
        margin-bottom: 30px;
        background-color: #1e1e1e;
        color: #fff;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 30px;
        background-image: linear-gradient(rgba(30,30,30,0.8), rgba(30,30,30,0.8)), url('/images/musicplatform-hero.jpg');
        background-size: cover;
        background-position: center;
    }

    .profile-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 4px solid #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        flex-shrink: 0;
    }

    .profile-info h1 {
        margin: 0 0 10px 0;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .profile-meta {
        margin-bottom: 20px;
        opacity: 0.8;
    }

        .profile-meta span:not(:last-child)::after {
            content: "•";
            margin: 0 10px;
        }

    .profile-actions .main-button {
        background-color: #ff5500;
    }

    .profile-actions .action-btn {
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        border-color: rgba(255,255,255,0.3);
    }

        .profile-actions .action-btn:hover {
            background-color: rgba(255,255,255,0.3);
        }

    .profile-nav {
        border-bottom: 1px solid #ddd;
        margin-bottom: 30px;
    }

        .profile-nav a {
            padding: 15px 25px;
            display: inline-block;
            margin-bottom: -1px;
            color: #666;
            font-weight: 600;
            text-decoration: none;
            border-bottom: 3px solid transparent;
        }

            .profile-nav a.active, .profile-nav a:hover {
                color: #1e1e1e;
                border-bottom-color: #ff5500;
            }

    .playlist-track-list {
        list-style: none;
        padding: 0;
    }

    .playlist-track-item {
        display: grid;
        grid-template-columns: 40px 50px 1fr auto;
        gap: 15px;
        align-items: center;
        padding: 10px;
        border-radius: 6px;
        transition: background-color 0.2s ease;
    }

        .playlist-track-item:hover {
            background-color: #f5f5f5;
        }

    .track-number, .track-list-artwork-container, .track-list-info, .track-duration {
        display: flex;
        align-items: center;
    }

    .track-number {
        color: #888;
        justify-content: center;
    }

    .playlist-track-item .play-icon {
        display: none;
        font-size: 20px;
        color: #ff5500;
        cursor: pointer;
    }

    .playlist-track-item:hover .track-number {
        display: none;
    }

    .playlist-track-item:hover .play-icon {
        display: inline-block;
    }

    .track-list-artwork {
        width: 45px;
        height: 45px;
        border-radius: 4px;
    }

    .track-list-info .title {
        font-weight: 600;
        color: #333;
    }

    .track-list-info .artist {
        font-size: 0.9rem;
        color: #777;
    }

    .track-list-info a {
        text-decoration: none;
        color: inherit;
    }

        .track-list-info a:hover {
            text-decoration: underline;
        }

    .track-duration {
        color: #888;
        font-size: 0.9rem;
        justify-content: flex-end;
    }

    .view-all-link {
        display: block;
        text-align: right;
        margin-top: 20px;
        font-weight: 600;
        color: #ff5500;
        text-decoration: none;
    }

        .view-all-link:hover {
            text-decoration: underline;
        }
</style>

<div class="container profile-page-container">
    <div class="profile-header">
        <img src="~/images/musicplatform-hero.jpg" alt="User Avatar" class="profile-avatar" />
        <div class="profile-info">
            <h1>Synthwave Dreamer</h1>
            <div class="profile-meta">
                <span>15 Followers</span>
                <span>23 Following</span>
                <span>Joined July 2025</span>
            </div>
            <div class="profile-actions">
                <a href="#" class="main-button">Follow</a>
                <!-- This "Edit Profile" button should only be shown if the logged-in user is viewing their own page -->
                <!-- <a href="#" class="action-btn"><i class="fa fa-pencil"></i> Edit Profile</a> -->
            </div>
        </div>
    </div>

    <nav class="profile-nav">
        <a href="#">Tracks</a>
        <a href="#">Playlists</a>
        <a href="#" class="active">Favorites</a>
    </nav>

    <div class="tab-content">
