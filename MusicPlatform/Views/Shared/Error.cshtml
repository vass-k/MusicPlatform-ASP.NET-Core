@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<!-- Link to our new stylesheet for consistent styling -->
<link rel="stylesheet" href="~/css/error-pages.css" asp-append-version="true" />

<div class="error-container">
    <h1 class="error-code">Error</h1>
    <p class="error-message">An unexpected error occurred.</p>
    <p class="error-subtext">
        We're sorry for the inconvenience. Please try again later, or return to the home page.
    </p>

    <!-- This block is helpful for developers during debugging -->
    @if (Model.ShowRequestId)
    {
        <p class="error-subtext">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a asp-controller="Home" asp-action="Index" class="main-button">Return to Home</a>
</div>