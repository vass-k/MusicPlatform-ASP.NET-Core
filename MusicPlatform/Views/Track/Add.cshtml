@model MusicPlatform.Web.ViewModels.Track.TrackAddViewModel

@{
    ViewData["Title"] = "Upload Track";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://unpkg.com/filepond/dist/filepond.css">
<link rel="stylesheet" href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css">

<!-- Custom CSS for the Upload Page -->
<style>
    .upload-page-container {
        padding: 100px 25px;
        background-color: #f9f9f9;
    }

    .upload-header {
        text-align: center;
        margin-bottom: 50px;
    }

        .upload-header h1 {
            font-size: 3rem;
            font-weight: 700;
            color: #1e1e1e;
        }

            .upload-header h1 em {
                font-style: normal;
                color: #ff5500; /* Theme Orange */
            }

    .upload-layout-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 40px;
        max-width: 1100px;
        margin: 0 auto;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 25px;
    }

        .form-group label {
            display: block;
            font-weight: 600;
            color: #555;
            margin-bottom: 8px;
        }

        .form-group .form-control {
            width: 100%;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
            transition: border-color 0.2s ease;
        }

            .form-group .form-control:focus {
                border-color: #ff5500;
                outline: none;
                box-shadow: 0 0 0 3px rgba(255, 85, 0, 0.15);
            }

    .upload-actions {
        margin-top: 30px;
        text-align: center;
    }

    .text-danger {
        font-size: 0.9em;
        margin-top: 5px;
    }

    /* Styles for the new progress bar */
    .progress-container {
        display: none; /* Hidden by default */
        max-width: 500px;
        margin: 30px auto 0 auto;
        text-align: center;
    }

    .progress-bar-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 10px;
    }

    .progress-bar-wrapper {
        width: 100%;
        height: 15px;
        background-color: #e0e0e0;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-bar-inner {
        width: 0%; /* Starts at 0 */
        height: 100%;
        background-color: #ff5500; /* Use our theme color! */
        border-radius: 10px;
        transition: width 2.5s cubic-bezier(0.25, 1, 0.5, 1); /* Smooth animation */
    }

    .filepond--root {
        font-family: 'Yeezy', 'Poppins', sans-serif;
    }

    .filepond--drop-label {
        color: #555;
    }

    .filepond--panel-root {
        background-color: #fff;
        border-radius: 8px;
        border: 2px dashed #ccc;
    }

    .filepond--item-panel {
        background-color: #ff5500;
    }

    .filepond--file-action-button {
        background-color: rgba(0,0,0,0.5);
    }
</style>

<div class="container upload-page-container">
    <div class="upload-header">
        <h1>Upload <em>Your Track</em></h1>
    </div>

    <form id="upload-form" asp-controller="Track" asp-action="Add" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="upload-layout-grid">
            <!-- Left Column -->
            <div class="main-upload-form">
                <div class="form-group">
                    <label asp-for="AudioFile" class="control-label"></label>
                    <input asp-for="AudioFile" type="file" />
                    <span asp-validation-for="AudioFile" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top: 30px;">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArtistName" class="control-label"></label>
                    <input asp-for="ArtistName" class="form-control" />
                    <span asp-validation-for="ArtistName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreId" class="control-label"></label>
                    <select asp-for="GenreId" class="form-control" asp-items="@Model.Genres">
                        <option value="">-- Select a Genre --</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
            </div>

            <!-- Right Column -->
            <div class="side-upload-form">
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="upload-actions">
            <button id="submit-button" type="submit" class="main-button">Upload Track</button>
        </div>

        <div id="progress-container" class="progress-container">
            <p class="progress-bar-label">Uploading, please wait...</p>
            <div class="progress-bar-wrapper">
                <div id="progress-bar-inner" class="progress-bar-inner"></div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://unpkg.com/filepond-plugin-file-validate-type/dist/filepond-plugin-file-validate-type.js"></script>
    <script src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js"></script>
    <script src="https://unpkg.com/filepond/dist/filepond.js"></script>

    <script src="~/js/upload-track.js" asp-append-version="true" defer></script>
}